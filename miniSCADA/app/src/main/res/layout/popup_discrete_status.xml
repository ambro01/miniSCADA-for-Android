<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp" android:layout_height="140dp"
    android:focusable="true"
    android:background="#7d7676"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Data Block:"
            android:id="@+id/textView2"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_above="@+id/wordNumber_analog"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="105dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Word:"
            android:id="@+id/textView3"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/setpointValue"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bit:"
            android:id="@+id/textView4"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/wordNumber_analog"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginLeft="75dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.18"
        android:weightSum="1">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Status"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:id="@+id/textView5"
            android:textSize="18dp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/setpointValue"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/wordNumber_analog"
            android:layout_marginLeft="22dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/wordNumber_analog"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginLeft="55dp" />

        <Spinner
            android:id="@+id/bitIndex_only_status"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:drawSelectorOnTop="true"
            android:entries="@array/bitIndex"
            android:layout_weight="0.14"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="48dp"
            android:minWidth="50dp"
            android:dropDownWidth="40dp"
            android:textAlignment="center"
            android:spinnerMode="dropdown"
            android:dropDownSelector="#696262" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="OK"
            android:id="@+id/button13"
            android:onClick="onConfirmPopup"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/bitIndeks_both_status"
            android:layout_marginLeft="200dp"
            android:layout_weight="0.08" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Close"
            android:id="@+id/button14"
            android:onClick="onClosePopup"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/button13" />
    </LinearLayout>

</LinearLayout>