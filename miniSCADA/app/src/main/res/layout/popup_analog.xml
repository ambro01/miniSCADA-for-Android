<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="140dp"
    android:focusable="true"
    android:background="@color/popup"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Data Block:"
            android:id="@+id/textView2"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_above="@+id/wordNumber_both_status"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="105dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Word:"
            android:id="@+id/textView3"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/dbNumber_both_status"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginLeft="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Value"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:id="@+id/textView5"
            android:textSize="18dp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/dbNumber_analog"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/wordNumber_analog"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:layout_marginLeft="52dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="OK"
            android:id="@+id/button13"
            android:onClick="onConfirmPopup"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/bitIndeks_both_status"
            android:layout_marginLeft="80dp"
            android:layout_weight="0.08" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Close"
            android:id="@+id/button14"
            android:onClick="onClosePopup"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/button13" />
    </LinearLayout>

</LinearLayout>