<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp" android:layout_height="150dp"
    android:focusable="true"
    android:background="#7d7676"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Data Block (DB):"
        android:id="@+id/textView2"
        android:textSize="18dp"
        android:layout_marginStart="18dp"
        android:layout_above="@+id/wordNumber"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number:"
        android:id="@+id/textView3"
        android:textSize="18dp"
        android:layout_above="@+id/radioGroup"
        android:layout_alignStart="@+id/textView2" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/wordNumber"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/textView4">

        <RadioButton
            android:id="@+id/bit0"
            android:layout_width="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="0"
            android:checked="false"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/bit1"
            android:layout_width="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="1"
            android:checked="false"
            android:textSize="10dp"/>

        <RadioButton
            android:id="@+id/bit2"
            android:layout_width="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="2"
            android:checked="false"
            android:textSize="10dp"/>

        <RadioButton
            android:id="@+id/bit3"
            android:layout_width="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="3"
            android:checked="false"
            android:textSize="10dp"/>

        <RadioButton
            android:id="@+id/bit4"
            android:layout_width="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="4"
            android:checked="false"
            android:textSize="10dp"/>

        <RadioButton
            android:id="@+id/bit5"
            android:layout_width="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="5"
            android:checked="false"
            android:textSize="10dp"/>

        <RadioButton
            android:id="@+id/bit6"
            android:layout_width="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="6"
            android:checked="false"
            android:textSize="10dp"/>

        <RadioButton
            android:id="@+id/bit7"
            android:layout_width="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="7"
            android:checked="false"
            android:textSize="10dp"/>


    </RadioGroup>

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/dbNumber"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/wordNumber" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/wordNumber"
        android:textSize="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="41dp"
        android:layout_below="@+id/dbNumber"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bit:"
        android:id="@+id/textView4"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_alignStart="@+id/textView3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button13"
        android:layout_above="@+id/wordNumber"
        android:layout_alignEnd="@+id/radioGroup"
        android:onClick="onConfirmPopup" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/button14"
        android:layout_alignBottom="@+id/wordNumber"
        android:layout_alignEnd="@+id/button13"
        android:onClick="onClosePopup" />

</RelativeLayout>