<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp" android:layout_height="110dp"
    android:focusable="true"
    android:background="@color/popup"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.18"
        android:weightSum="1">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="IP address"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:id="@+id/textView5"
            android:textSize="18dp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ip_1"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/wordNumber_both_status"
            android:imeOptions="actionDone"
            android:layout_marginLeft="22dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ip_2"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView2"
            android:imeOptions="actionDone"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ip_3"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView2"
            android:imeOptions="actionDone"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ip_4"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView2"
            android:imeOptions="actionDone"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="OK"
            android:id="@+id/button13"
            android:onClick="onConfirmPopup"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/bitIndeks_both_status"
            android:layout_marginLeft="140dp"
            android:layout_weight="0.08" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Close"
            android:id="@+id/button14"
            android:onClick="onClosePopup"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/button13" />
    </LinearLayout>

</LinearLayout>